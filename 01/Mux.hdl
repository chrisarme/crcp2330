/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    
	Not(in=sel, out=notSel);
	And(a=a, b=notSel, out=aNotSelCheck);
	And(a=b, b=sel, out=bSelCheck);

	// The last Or check, to see if a or b are true
	Or(a=aNotSelCheck, b=bSelCheck, out=out);

}